<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/kendoUI")
        @RenderSection("styles", required: false)
        @Scripts.Render("~/bundles/kendo")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Tell to ask", "Index", "Home", new { area = "" }, new { @class = "brand" })
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
                        
                            @if (this.User.Identity.IsAuthenticated)
                            {
                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">Questions <span class="caret"/></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("My Questions", "MyQuestions", "LoggedUser", new { area = "LoggedUser" }, null)</li>
                                        
                                        <li>@Html.ActionLink("AskQuestion", "AskQuestion", "LoggedUser", new { area = "LoggedUser" }, null)</li>
                                        <li>@Html.ActionLink("Take Question", "TakeQuestion", "LoggedUser", new { area = "LoggedUser" }, null)</li>
                                    </ul>
                                </li>
                            }
                            @*Admin*@
                            @if (this.User.IsInRole("Admin"))
                            {
                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">Administration <span class="caret"/></a>
                                    <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Categories", "Index", "Categories", new { area = "Administration" }, null)</li>
                                            <li>@Html.ActionLink("Questions", "Index", "Questions", new { area = "Administration" }, null)</li>
                                            <li>@Html.ActionLink("Answers", "Index", "Answers", new { area = "Administration" }, null)</li>
                                            <li>@Html.ActionLink("Users", "Index", "Users", new { area = "Administration" }, null)</li>
                                        </ul>
                                    </li>
                            }
                           
                            
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
      
        <div class="container">
            @RenderBody()
            
            
        </div>
        
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

        <footer class="navbar navbar-fixed-bottom text-center footer-main">
           
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
    </body>
</html>
